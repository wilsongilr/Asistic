@model AsisTICWeb.Models.Dto.ITHTickeCreatetDto
@{
    ViewData["Title"] = "CrearTicket";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<SelectListItem> items = (List<SelectListItem>)ViewBag.items;
    
}

<h1>CrearTicket</h1>

<form method="post" asp-action="CrearTicket">
    
    <div class="container border p-3">
        <div asp-validation-summary="ModelOnly"  class="text-danger"></div>
       
        <div class="row">
            <h2 class="text-info">Crear Nuevo Ticket</h2>
        </div>
    

        <div class="row mt-2">
          
            <div class="col-md-6">
                <label class="form-label">Seleccione Solicitud</label>
              @*  <select class="form-select" asp-for="IdSolicitud"></select>*@
                <span asp-validation-for="IdSolicitud" class="text-danger"></span>


                @Html.DropDownList("datos",items, "Select Solicitud",new { @class = "form-control" })
         

            </div>
           
        </div>
        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">Titulo Solicitud/Problema</label>
                <input class="form-control" asp-for="Solicitud"/>
                <span asp-validation-for="Solicitud" class="text-danger"></span>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">Descripcion Error / Solicitud</label>
                
                <textarea class="form-control" asp-for="Descripcion"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">Adjunto</label>
                <input type="file" class="form-control"/>
            </div>
        </div>
        <div class="d-grid gap-2 d-md-block mt-2">
            <button type="submit" class="btn btn-primary">Guardar</button>
            <a asp-controller="Ticket" asp-action="IndexTickets" class="btn btn-success">Regresar</a>

        </div>
        <div class="row">
            <div class="col-md-6"></div>
        </div>

    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}